<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants">

        <TextView
            android:id="@+id/dateLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text line 1"
            android:textSize="18dp"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/iconImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/currentTempLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text line 2"
            android:textSize="18dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/highTempLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text line 3"
            android:textSize="18dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/lowTempLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text line 3"
            android:textSize="18dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/precipitationChanceLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text line 3"
            android:textSize="18dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/windLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text line 3"
            android:textSize="18dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/humidityLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text line 3"
            android:textSize="18dp"
            android:textColor="#000000"/>
    </LinearLayout>
</FrameLayout>